<%= form_for(@person) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :email %>
  <%= f.email_field :email %><br/>
  <%= f.label :birthday %>
  <%= f.date_field :birthday %><br/>
  <%= f.label :city %>
  <%= f.text_field :city %><br/>
  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %><br/>

  <%= submit_tag 'Save' %>

<% end %>
