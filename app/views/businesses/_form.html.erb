<%= form_for(@business) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :category %>
  <%= f.text_field :category %><br/>
  <%= f.label :website %>
  <%= f.text_field :website %><br/>
  <%= f.label :address %>
  <%= f.text_field :address %><br/>
  <%= f.label :phone %>
  <%= f.telephone_field :phone %><br/>
  <%= f.label :about %>
  <%= f.text_area :about %><br/>

  <%= submit_tag 'Save' %>

<% end %>
